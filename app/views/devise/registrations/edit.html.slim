div.rounded
  div.user-form
    h2 Редактировать личные данные 

    div
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| 
        = devise_error_messages!

        = f.email_field :email, autofocus: true, placeholder: "Логин", class: 'input-user'
        = f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: 'input-user'
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Подтверждение пароля", class: 'input-user'
        = f.password_field :current_password, autocomplete: "off", placeholder: "Текущий пароль", class: 'input-user'

        div.row.footer-btn
          = f.submit "Сохранить", class: 'control-right control-middle'
  
  = link_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete 
  = link_to "Главная страница", :back        
